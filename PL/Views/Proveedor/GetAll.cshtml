@model ML.Proveedor
<button class="btn btn-success" onclick="MostrarFormulario()">Agregar</button>
<section style="display: none" id="formulario">
    <h5>Ingrese la información del nuevo Proveedor</h5>
    @using (@Html.BeginForm("Form", "Proveedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.IdProveedor)
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", })
            </div>
        </div>
    }
</section>
<table class="table table-dark table-hover table-bordered table-responsive">
    <thead>
        <tr class="table-secondary">
            <td class="text-center">Editar</td>
            <td class="text-center">Nombre</td>
            <td class="text-center">Eliminar</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section Scripts
{
<script type="text/javascript">

    function MostrarFormulario() {
        $('#formulario').toggle('slow')
        $('#formulario').css('display: block')
        $('#formulario').show()
    }

</script>


}