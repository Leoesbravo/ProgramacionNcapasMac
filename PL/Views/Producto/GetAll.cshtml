@model ML.Producto

<div class="text-center">
    <h1>Lista de Productos</h1>
</div>
<hr />

@Html.ActionLink("Agregar", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })



<table class="table table-dark table-hover table-bordered table-responsive">
    <thead>
        <tr class="table-secondary">
            <td class="text-center">Editar</td>
            <td class="text-center">Nombre</td>
            <td class="text-center">Precio</td>
            <td class="text-center">Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Producto producto in Model.Productos)
        {
            <tr>
                <td class="text-center"><a class="btn btn-warning" href="@Url.Action("Form","Producto", new {idProducto = producto.IdProducto })"><i class="bi bi-arrow-right-square-fill "></i></a></td>
                <td>@producto.Nombre</td>
                <td>$ @producto.Precio</td>
                <td class="text-center"><a class="btn btn-danger" href="@Url.Action("Delete","Producto", new {idProducto = producto.IdProducto })"><i class="bi bi-arrow-right-square-fill "></i></a></td>
            </tr>

        }
    </tbody>
</table>