@model ML.Producto

    <div class="container">
        <div class="text-center">
            <h1>Formulario de Productos</h1>
            <h5>Ingrese la información del producto a registrar</h5>
        </div>
        <hr />


    @using (Html.BeginForm("Form", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            @Html.TextBoxFor(model => model.IdProducto, new { @class = "form-control", @style="display: none"})
            <div class="col-md-3">
                @Html.LabelFor(model => model.Nombre)
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-basket-fill"></i></span>
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ejemplo: Papitas" })
                </div>
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.Precio)
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-basket-fill"></i></span>
                    @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @placeholder = "Ejemplo: Papitas" })
                </div>
                @Html.ValidationMessageFor(model => model.Precio)
            </div>
        </div>
        <button type="submit" class="btn btn-success">Agregar</button>
    }
    </div>